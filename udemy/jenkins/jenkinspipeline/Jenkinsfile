pipeline {
    agent any
    
	stages{
        stage('Build'){
            steps {
                powershell "cd udemy/jenkins/jenkinspipeline"
                powershell "mvn clean package"
            }
            post {
                success {
                    echo "Now Archiving..."
                    archiveArtifacts artifacts: "**/target/*.war"
                }
            }
        }
    }
}